{"metrics": [{"name": "temp", "query": "node_hwmon_temp_celsius{job=\"%J\",sensor=\"temp9\"}", "type": "d", "alarm": {"lowAlarmLimit" : 1, "highAlarmLimit": 5}},
             {"name": "boot", "query": "node_boot_time_seconds{job=\"%J\"}",                   "type": "d", "alarm": {"lowAlarmLimit" : 1, "highAlarmLimit": 5}},
             {"name": "damage", "query": "sum(DRP_Damage{{instrument=\"%I\",partition=\"%P\"}}) by (alias, instance)"},
             {"name": "record_rate", "query": "sum(irate(DRP_RecordSize{{instrument=\"%I\",partition=\"%P\"}})[5s]) by (alias, instance)"}]
}
