             {"name": "record_rate", "query": "sum(irate(DRP_RecordSize{{instrument=\"%I\",partition=\"%P\"}})[5s]) by (instrument, partition)"},
             {"name": "xpm_link_up", "query": "sum(Us:RxLinkUp{job=\"%J\",instrument=\"%I\"}) by (instrument)", "type": "I", "alarm": {"lowAlarmLimit": 2, "highAlarmLimit": 4, "lowAlarmSeverity": 3, "highAlarmSeverity": 3}}]
